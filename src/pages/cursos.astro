---
import Layout from "../layout.astro";
import Modal from "../components/Modal";
import LeadsCapture from "../components/LeadsCapture.astro";
const cursos = [
	{
		nome: "MOPP",
		titulo: "Movimentação Operacional de Produtos Perigosos",
		descricao: "Curso obrigatório para motoristas que transportam produtos perigosos",
		preco: "R$ 285,99",
		icone: "emergency_heat",
		img: '/cursos/mopp.webp',
		cor: "primary",
		link: "/mopp",
		beneficios: [
			"100% online",
			"Acesso 24/7",
			"Certificado em 5 dias úteis"
		]
	},
	{
		nome: "Transporte Coletivo",
		titulo: "Curso de Transporte Coletivo de Passageiros",
		descricao: "Habilitação para condutores de ônibus urbano e intermunicipal",
		preco: "R$ 285,99",
		icone: "transit_ticket",
		img: '/cursos/coletivo.webp',
		cor: "secondary",
		link: "/transporte-coletivo",
		beneficios: [
			"Totalmente online",
			"Estude quando quiser",
			"Certificado em 5 dias úteis"
		]
	},
	{
		nome: "Transporte Emergencial",
		titulo: "Curso de Transporte Emergencial",
		descricao: "Habilitação para condutores de ambulância e veículos de emergência",
		preco: "R$ 285,99",
		img: '/cursos/emergencia.webp',
		icone: "ambulance",
		cor: "primary",
		link: "/transporte-emergencial",
		beneficios: [
			"100% online",
			"Sem horários fixos",
			"Certificado em 5 dias úteis"
		]
	},
	{
		nome: "Transporte Escolar",
		titulo: "Curso de Transporte Escolar",
		descricao: "Habilitação para transporte de crianças e estudantes",
		preco: "R$ 285,99",
		icone: "directions_bus",
		img: '/cursos/escolar.webp',
		cor: "secondary",
		link: "/transporte-escolar",
		beneficios: [
			"Totalmente online",
			"Acesse em qualquer hora",
			"Certificado em 5 dias úteis"
		]
	},
	{
		nome: "Cargas Indivisíveis",
		titulo: "Curso de Transporte de Cargas Indivisíveis",
		descricao: "Habilitação para transporte de cargas excepcionais e especiais",
		preco: "R$ 285,99",
		icone: "local_shipping",
		img: '/cursos/indivisivel.webp',
		cor: "primary",
		link: "/cargas-indivisiveis",
		beneficios: [
			"100% online",
			"Faça a seu ritmo",
			"Certificado em 5 dias úteis"
		]
	}
];
---

<Layout
	title="Cursos Especializantes - Autoescola Danda"
	description="Cursos profissionalizantes e especializantes na Autoescola Danda. MOPP, transporte escolar, transporte de passageiros e muito mais."
>
	<main class="flex flex-col w-full items-center bg-white min-h-screen">
		<Modal 
		client:load 
		nome="1">
		<div class="flex flex-col items-center text-center p-6 max-w-md mx-auto">

			<span class="text-sm font-semibold bg-blue-50 text-blue-700 px-3 py-1 rounded-full mb-4">
			Condição Especial por Tempo Limitado
			</span>

			<h2 class="text-2xl font-bold text-gray-800 mb-3">
			Desconto de R$94 aplicado no valor do curso
			</h2>

			<p class="text-gray-600 mb-4">
			O valor promocional já está aplicado automaticamente.
			De R$380,00 por apenas <strong class="text-gray-800">R$285,99</strong>.
			</p>

			<p class="text-sm text-gray-500">
			Oferta válida por tempo limitado. Aproveite a condição especial enquanto estiver disponível.
			</p>

		</div>
		</Modal>
		<!-- Hero -->
		<section class="w-full pt-32 sm:pt-34 md:pt-42 pb-10 sm:pb-12 bg-gradient-to-br from-primary via-primary to-primary/90">
			<div class="corpo mx-auto text-center px-4">
				<p class="text-white/80 font-semibold uppercase tracking-wider mb-2 text-xs sm:text-sm">
					Cursos Profissionalizantes
				</p>
				<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
					Cursos Especializantes
				</h1>
				<p class="text-white/90 text-sm sm:text-base md:text-lg lg:text-xl max-w-3xl mx-auto">
					Evolução Profissional para motoristas. Certificados válidos em todo o Brasil.
				</p>
			</div>
		</section>

		<!-- Lista de Cursos -->
		<section class="w-full py-12 sm:py-16 md:py-20 bg-white">
			<div class="corpo mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
					{cursos.map((curso) => (
						<div class="bg-neutral-50 rounded-lg p-6 sm:p-8 border-2 border-neutral-100 hover:border-primary/30 transition-all duration-200 flex flex-col scroll-animate">
							<!-- Ícone e Nome -->
							<div class="w-full h-[150px] relative mb-6">
								<img
									src={curso.img || ``}
									alt={curso.nome}
									class="w-full h-40 object-cover rounded-lg mb-4 sm:mb-6 absolute h-[150px] top-0 left-0"
									loading="lazy"/>

							</div>
							

							<!-- Conteúdo -->
							<div class="flex-1">
								<h2 class="text-xl sm:text-2xl font-bold text-neutral-800 mb-2">
									{curso.nome}
								</h2>
								<p class="text-neutral-600 text-sm sm:text-base mb-4">
									{curso.descricao}
								</p>

								<!-- Benefícios -->
								<ul class="space-y-2 mb-6">
									{curso.beneficios.map((beneficio) => (
										<li class="flex items-center gap-2 text-neutral-700 text-sm">
											<span class="material-symbols-outlined text-green-500 text-lg">check_circle</span>
											{beneficio}
										</li>
									))}
								</ul>
							</div>

							<!-- Preço e CTA -->
							<div class="pt-6 border-t border-neutral-200">
							<p class="text-sm text-neutral-500">
								De <span class="line-through">R$ 380,00</span>
							</p>
							<div class="mt-1">
								<p class="text-3xl sm:text-4xl font-extrabold text-primary leading-tight">
								{curso.preco}
								<span class="text-base font-medium text-neutral-700">à vista</span>
								</p>
							</div>
							<p class="text-sm text-neutral-600 mt-1 mb-4">
								ou em até 12x R$ 30,99 sem juros no cartão
							</p>



								{curso.link ? (
									<a
										href={curso.link}
										class="w-full bg-primary hover:bg-primary/90 active:bg-primary/80 text-white py-3.5 sm:py-4 rounded-lg font-bold text-sm sm:text-base flex items-center justify-center gap-2 transition-colors duration-200 min-h-[48px]"
									>
										<span class="material-symbols-outlined">arrow_forward</span>
										Ver Detalhes
									</a>
								) : (
									<a
										href={`https://wa.me/5517997437646?text=Olá!%20Quero%20saber%20mais%20sobre%20o%20curso%20de%20${curso.nome}`}
										target="_blank"
										rel="noopener noreferrer"
										class="w-full bg-green-500 hover:bg-green-600 active:bg-green-700 text-white py-3.5 sm:py-4 rounded-lg font-bold text-sm sm:text-base flex items-center justify-center gap-2 transition-colors duration-200 min-h-[48px]"
									>
										<img src="/icone-whatsapp.png" alt="WhatsApp" height="24" width="24" loading="lazy" />
										Falar no WhatsApp
									</a>
								)}
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- LeadsCapture -->
		<LeadsCapture />

		<!-- CTA Final -->
		<section class="w-full py-12 sm:py-16 bg-gradient-to-br from-secondary to-secondary/90">
			<div class="corpo mx-auto text-center px-4">
				<h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-4">
				Não sabe qual curso é ideal para você?
				</h2>

				<p class="text-white/90 text-base sm:text-lg md:text-xl mb-6 sm:mb-8 max-w-2xl mx-auto">
				Fale agora com nossa equipe e receba orientação rápida e segura pelo WhatsApp.
				Atendimento direto, sem enrolação.
				</p>

				<a
				href="https://wa.me/5517997437646?text=Olá!%20Preciso%20de%20orientação%20para%20escolher%20um%20curso"
				target="_blank"
				rel="noopener noreferrer"
				class="inline-flex bg-white hover:bg-neutral-100 active:bg-neutral-200 text-secondary px-8 sm:px-12 py-4 sm:py-5 rounded-lg font-bold text-lg sm:text-xl items-center justify-center gap-3 transition-colors duration-200 shadow-2xl min-h-[60px]"
				>
				<img src="/icone-whatsapp.png" alt="WhatsApp" height="32" width="32" loading="lazy" />
				Falar agora pelo WhatsApp
				</a>

				<p class="text-white/80 text-sm mt-4">
				✔ Resposta rápida • ✔ Atendimento humano • ✔ Sem compromisso
				</p>
			</div>
		</section>
	</main>
</Layout>
