---
import Layout from "../layout.astro";

const beneficios = [
	{
		icone: "event_available",
		texto: "Turma toda semana"
	},
	{
		icone: "verified",
		texto: "Certificado válido"
	},
	{
		icone: "support_agent",
		texto: "Atendimento rápido"
	}
];

const passos = [
	{
		numero: "1",
		texto: "Fale no WhatsApp"
	},
	{
		numero: "2",
		texto: "Envie seus documentos"
	},
	{
		numero: "3",
		texto: "Comece o curso"
	}
];
---

<Layout
	title="Curso MOPP em Aparecida do Taboado - Autoescola Danda"
	description="Curso MOPP rápido e fácil. R$ 285,99. Turmas toda semana. Certificado válido em todo Brasil. Fale no WhatsApp agora."
>
	<main class="flex flex-col w-full items-center bg-white min-h-screen">
		<!-- Hero/Topo -->
		<section class="w-full pt-24 sm:pt-28 pb-8 sm:pb-12 bg-gradient-to-br from-primary to-primary/90">
			<div class="corpo mx-auto text-center px-4">
				<!-- Headline -->
				<h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-3 sm:mb-4 leading-tight">
					Curso MOPP Rápido e Fácil<br/>em Aparecida do Taboado
				</h1>

				<!-- Subtítulo -->
				<p class="text-white/90 text-lg sm:text-xl md:text-2xl mb-6 sm:mb-8 font-medium">
					Por R$ 285,99 você regulariza em dias
				</p>

				<!-- Botão WhatsApp Principal -->
				<a
					href="https://wa.me/5567981368080?text=Olá!%20Quero%20fazer%20o%20curso%20MOPP"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex bg-green-500 hover:bg-green-600 active:bg-green-700 text-white text-lg sm:text-xl font-bold px-8 sm:px-12 py-5 sm:py-6 rounded-2xl items-center justify-center gap-3 transition-colors duration-200 shadow-2xl min-h-[60px] w-full sm:w-auto"
				>
					<img src="/icone-whatsapp.png" alt="WhatsApp" height="32" width="32" />
					Quero Garantir Minha Vaga
				</a>
			</div>
		</section>

		<!-- Benefícios -->
		<section class="w-full py-10 sm:py-12 bg-white">
			<div class="corpo mx-auto px-4">
				<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 max-w-3xl mx-auto">
					{beneficios.map((beneficio) => (
						<div class="bg-neutral-50 rounded-2xl p-6 sm:p-8 text-center border-2 border-primary/10">
							<span class="material-symbols-outlined text-primary text-5xl sm:text-6xl mb-3 block">
								{beneficio.icone}
							</span>
							<p class="text-neutral-800 font-bold text-lg sm:text-xl">
								{beneficio.texto}
							</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Preço Destaque -->
		<section class="w-full py-10 sm:py-12 bg-gradient-to-br from-secondary to-secondary/90">
			<div class="corpo mx-auto text-center px-4">
				<p class="text-white text-xl sm:text-2xl mb-2 font-medium">
					Investimento
				</p>
				<div class="bg-white/10 backdrop-blur-sm rounded-3xl p-6 sm:p-8 inline-block mb-4">
					<p class="text-white text-5xl sm:text-6xl md:text-7xl font-bold">
						R$ 285,99
					</p>
				</div>
				<p class="text-white/90 text-lg sm:text-xl font-medium">
					Pode parcelar no cartão
				</p>
			</div>
		</section>

		<!-- Como Funciona -->
		<section class="w-full py-10 sm:py-12 bg-white">
			<div class="corpo mx-auto px-4">
				<h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-center text-neutral-800 mb-8 sm:mb-12">
					Como Funciona
				</h2>

				<div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 max-w-3xl mx-auto">
					{passos.map((passo) => (
						<div class="text-center">
							<div class="w-16 h-16 sm:w-20 sm:h-20 bg-primary text-white rounded-full flex items-center justify-center text-3xl sm:text-4xl font-bold mx-auto mb-4">
								{passo.numero}
							</div>
							<p class="text-neutral-800 font-bold text-lg sm:text-xl">
								{passo.texto}
							</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Depoimento -->
		<section class="w-full py-10 sm:py-12 bg-neutral-50">
			<div class="corpo mx-auto px-4">
				<div class="max-w-2xl mx-auto bg-white rounded-2xl p-6 sm:p-8 shadow-lg border-2 border-primary/10">
					<div class="flex gap-1 mb-4 justify-center">
						<span class="material-symbols-outlined text-yellow-400 text-2xl">star</span>
						<span class="material-symbols-outlined text-yellow-400 text-2xl">star</span>
						<span class="material-symbols-outlined text-yellow-400 text-2xl">star</span>
						<span class="material-symbols-outlined text-yellow-400 text-2xl">star</span>
						<span class="material-symbols-outlined text-yellow-400 text-2xl">star</span>
					</div>
					<p class="text-neutral-700 text-lg sm:text-xl text-center mb-4 leading-relaxed">
						"Fiz o MOPP com a Danda. Foi rápido e o pessoal ajudou com tudo. Recomendo!"
					</p>
					<p class="text-primary font-bold text-center text-base sm:text-lg">
						Carlos M. - Caminhoneiro
					</p>
				</div>
			</div>
		</section>

		<!-- CTA Final -->
		<section class="w-full py-10 sm:py-12 bg-gradient-to-br from-primary to-primary/90">
			<div class="corpo mx-auto text-center px-4">
				<h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-4 sm:mb-6">
					Não Perca Tempo!
				</h2>
				<p class="text-white/90 text-lg sm:text-xl mb-6 sm:mb-8">
					Vagas limitadas toda semana
				</p>

				<a
					href="https://wa.me/5567981368080?text=Olá!%20Quero%20fazer%20o%20curso%20MOPP"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex bg-green-500 hover:bg-green-600 active:bg-green-700 text-white text-lg sm:text-xl font-bold px-8 sm:px-12 py-5 sm:py-6 rounded-2xl items-center justify-center gap-3 transition-colors duration-200 shadow-2xl min-h-[60px] w-full sm:w-auto"
				>
					<img src="/icone-whatsapp.png" alt="WhatsApp" height="32" width="32" />
					Falar no WhatsApp Agora
				</a>
			</div>
		</section>

		<!-- Informações Extras (pequenas) -->
		<section class="w-full py-8 bg-neutral-50">
			<div class="corpo mx-auto text-center px-4">
				<p class="text-neutral-600 text-sm sm:text-base mb-2">
					<strong>Documentos necessários:</strong> RG, CPF, CNH e comprovante de residência
				</p>
				<p class="text-neutral-600 text-sm sm:text-base">
					Certificado válido em todo o Brasil
				</p>
			</div>
		</section>
	</main>
</Layout>
