---
import Layout from "../layout.astro";
import CoursePage from "../components/CoursePage";
import { pageSchemas, addRatingToSchema } from "../lib/schemas";

const props = {
	titulo: "Curso de Transporte Coletivo",
	subtitulo: "Habilitação para ônibus urbano e intermunicipal",
	beneficios: [
		{
			icone: "event_available",
			texto: "Turma toda semana",
		},
		{
			icone: "verified",
			texto: "Certificado válido",
		},
		{
			icone: "support_agent",
			texto: "Atendimento rápido",
		},
	],
	passos: [
		{
			numero: "1",
			texto: "Fale no WhatsApp",
		},
		{
			numero: "2",
			texto: "Envie seus documentos",
		},
		{
			numero: "3",
			texto: "Comece o curso",
		},
	],

	documentos: "CNH categoria C, D ou E, Email e um telefone para contato.",
	depoimento: {
		texto: "Fiz o curso de Transporte Coletivo e agora trabalho como motorista de ônibus. Valeu a pena!",
		autor: "Roberto S.",
		profissao: "Motorista de Ônibus",
		estrelas: 5,
	},
	whatsappLink:
		"https://wa.me/55179974376460?text=Olá!%20Quero%20fazer%20o%20curso%20de%20Transporte%20Coletivo",
	ctaTexto: "Quero Garantir Minha Vaga",
	ctaSecundarioTexto: "Falar no WhatsApp Agora",
	validade: "Certificado válido em todo o Brasil",
	secaoComoFuncionaTexto: "Como Funciona",
	naoPercaTempo: "Não Perca Tempo!",
	vagasLimitadas: "Vagas limitadas toda semana",
};

const meuSchema = pageSchemas.transporteColetivo({
	name: "Curso de Transporte Coletivo",
	description:
		"Curso de Transporte Coletivo de Passageiros com certificado válido em todo Brasil. Turmas toda semana.",
	image: "https://autoescoladanda.com.br/cursos/coletivo.webp",
});

const schemaComRating = addRatingToSchema(meuSchema, 4.9, 31);
---

<Layout
	title="Curso Transporte Coletivo - Autoescola Danda"
	description="Curso de Transporte Coletivo de Passageiros. Turmas toda semana. Certificado válido em todo Brasil. Fale no WhatsApp agora."
>
	<script
		type="application/ld+json"
		set:html={JSON.stringify(schemaComRating)}
	/>
	<CoursePage {...props} client:load />
</Layout>
