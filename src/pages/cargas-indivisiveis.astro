---
import Layout from "../layout.astro";
import CoursePage from "../components/CoursePage";
import { pageSchemas, addRatingToSchema } from "../lib/schemas";

const props = {
	titulo: "Curso de Cargas Indivisíveis",
	subtitulo:
		"Transporte de cargas especiais com certificado reconhecido nacionalmente",
	beneficios: [
		{
			icone: "laptop",
			texto: "100% Online",
		},
		{
			icone: "schedule",
			texto: "Sem Horários Fixos",
		},
		{
			icone: "flash_on",
			texto: "Certificado Rápido",
		},
	],
	passos: [
		{
			numero: "1",
			texto: "Fale no WhatsApp",
		},
		{
			numero: "2",
			texto: "Envie seus documentos",
		},
		{
			numero: "3",
			texto: "Comece o curso",
		},
	],

	depoimento: {
		texto: "Curso completo! Aprendi tudo sobre transporte de cargas grandes. Ajudou muito no trabalho.",
		autor: "José F.",
		profissao: "Motorista de Cargas",
		estrelas: 5,
	},
	whatsappLink:
		"https://wa.me/55179974376460?text=Olá!%20Quero%20fazer%20o%20curso%20de%20Cargas%20Indivisíveis",
	ctaTexto: "Quero Garantir Minha Vaga",
	ctaSecundarioTexto: "Falar no WhatsApp Agora",
	documentos: "CNH categoria C, D ou E, Email e um telefone para contato.",
	validade: "Certificado válido em todo o Brasil",
	secaoComoFuncionaTexto: "Como Funciona",
	naoPercaTempo: "Não Perca Tempo!",
	vagasLimitadas: "Vagas limitadas toda semana",
};

const meuSchema = pageSchemas.cursos({
	name: "Curso de Cargas Indivisíveis",
	description: "Curso completo de Cargas Indivisíveis com certificado válido em todo o Brasil.",
	image: "https://autoescoladanda.com.br/cursos/indivisivel.webp",
});

const schemaComRating = addRatingToSchema(meuSchema, 4.8, 48);
---

<Layout
	title="Curso Cargas Indivisíveis 100% Online - Autoescola Danda | Transporte de Cargas Especiais"
	description="Curso de Cargas Indivisíveis com certificado válido em todo Brasil. 100% online, sem horários fixos. Faça o curso quando quiser. Acesso imediato. Clique e saiba mais!"
>
	<script type="application/ld+json" set:html={JSON.stringify(schemaComRating)} />
	<CoursePage {...props} client:load />
</Layout>
