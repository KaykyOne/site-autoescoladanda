---
import Layout from "../layout.astro";
import SecaoCalculadora from "../components/SecaoCalculadora.astro";

const beneficios = [
	{
		icone: "payments",
		titulo: "Preços Justos",
		descricao: "Valores transparentes e competitivos para todas as categorias"
	},
	{
		icone: "event_available",
		titulo: "Horários Flexíveis",
		descricao: "Agende suas aulas nos horários que melhor se encaixam na sua rotina"
	},
	{
		icone: "verified",
		titulo: "Instrutores Qualificados",
		descricao: "Equipe experiente e preparada para te ajudar a conquistar sua CNH"
	},
	{
		icone: "emoji_events",
		titulo: "Alta Taxa de Aprovação",
		descricao: "Metodologia comprovada com excelentes resultados"
	}
];
---

<Layout
	title="Planos"
	description="Escolha o plano ideal para você e comece a usar nossa calculadora de forma ilimitada."
>
	<main class="flex flex-col w-full justify-center items-center min-h-screen">
		<!-- Hero Section -->
		<section class="w-full pt-32 sm:pt-36 md:pt-42 pb-10 sm:pb-12 bg-gradient-to-br from-primary via-primary to-primary/90">
			<div class="corpo mx-auto text-center px-4">
				<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 sm:mb-6">
					Escolha seu plano ideal
				</h1>
				<p class="text-white/80 text-sm sm:text-base md:text-lg lg:text-xl max-w-3xl mx-auto mb-6 sm:mb-8">
					Use nossa calculadora interativa e descubra o melhor pacote para conquistar sua CNH. Valores transparentes, sem taxas ocultas.
				</p>
				<div class="flex items-center justify-center gap-2 sm:gap-3 text-white/90">
					<span class="material-symbols-outlined text-2xl sm:text-3xl">arrow_downward</span>
					<span class="font-medium text-sm sm:text-base">Role para baixo e simule seu plano</span>
				</div>
			</div>
		</section>

		<!-- Benefícios -->
		<section class="w-full py-12 sm:py-16 bg-white">
			<div class="corpo mx-auto px-4">
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
					{beneficios.map((beneficio) => (
						<div class="bg-neutral-50 rounded-lg sm:rounded-lg p-5 sm:p-6 hover:shadow-lg transition-shadow duration-200">
							<div class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg bg-primary/10 flex items-center justify-center mb-3 sm:mb-4">
								<span class="material-symbols-outlined text-primary text-2xl sm:text-3xl">
									{beneficio.icone}
								</span>
							</div>
							<h3 class="text-lg sm:text-xl font-bold text-neutral-800 mb-2">
								{beneficio.titulo}
							</h3>
							<p class="text-neutral-600 text-xs sm:text-sm">
								{beneficio.descricao}
							</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Calculadora -->
		<SecaoCalculadora />
	</main>
</Layout>
