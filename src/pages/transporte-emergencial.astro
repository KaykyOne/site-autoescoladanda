---
import Layout from "../layout.astro";
import CoursePage from "../components/CoursePage";
import { pageSchemas, addRatingToSchema } from "../lib/schemas";

const props = {
	titulo: "Curso de Transporte Emergencial",
	subtitulo: "Habilitação para conduzir ambulâncias",
	beneficios: [
		{
			icone: "event_available",
			texto: "Turma toda semana",
		},
		{
			icone: "verified",
			texto: "Certificado válido",
		},
		{
			icone: "support_agent",
			texto: "Atendimento rápido",
		},
	],
	passos: [
		{
			numero: "1",
			texto: "Fale no WhatsApp",
		},
		{
			numero: "2",
			texto: "Envie seus documentos",
		},
		{
			numero: "3",
			texto: "Comece o curso",
		},
	],

	depoimento: {
		texto: "Curso muito bom. Aprendi tudo que preciso pra trabalhar com ambulância. Recomendo!",
		autor: "Marcos L.",
		profissao: "Motorista de Ambulância",
		estrelas: 5,
	},
	whatsappLink:
		"https://wa.me/55179974376460?text=Olá!%20Quero%20fazer%20o%20curso%20de%20Transporte%20Emergencial",
	ctaTexto: "Quero Garantir Minha Vaga",
	ctaSecundarioTexto: "Falar no WhatsApp Agora",
	documentos: "CNH categoria C, D ou E, Email e um telefone para contato.",
	validade: "Certificado válido em todo o Brasil",
	secaoComoFuncionaTexto: "Como Funciona",
	naoPercaTempo: "Não Perca Tempo!",
	vagasLimitadas: "Vagas limitadas toda semana",
};

const meuSchema = pageSchemas.transporteEmergencial({
	name: "Curso de Transporte Emergencial",
	description:
		"Curso de Transporte Emergencial (Ambulância) com certificado válido em todo Brasil. Turmas toda semana.",
	image: "https://autoescoladanda.com.br/cursos/emergencial.webp",
});

const schemaComRating = addRatingToSchema(meuSchema, 4.6, 22);
---

<Layout
	title="Curso Transporte Emergencial - Autoescola Danda"
	description="Curso de Transporte Emergencial (Ambulância). Turmas toda semana. Certificado válido em todo Brasil. Fale no WhatsApp agora."
>
	<script
		type="application/ld+json"
		set:html={JSON.stringify(schemaComRating)}
	/>
	<CoursePage {...props} client:load />
</Layout>
