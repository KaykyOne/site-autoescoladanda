---
import Layout from "../layout.astro";
import CoursePage from "../components/CoursePage";
import { pageSchemas, addRatingToSchema } from "../lib/schemas";

const props = {
	titulo: "Curso de Transporte Escolar",
	subtitulo: "Habilitação para transporte de crianças e estudantes",
	beneficios: [
		{
			icone: "event_available",
			texto: "Turma toda semana",
		},
		{
			icone: "verified",
			texto: "Certificado válido",
		},
		{
			icone: "support_agent",
			texto: "Atendimento rápido",
		},
	],
	passos: [
		{
			numero: "1",
			texto: "Fale no WhatsApp",
		},
		{
			numero: "2",
			texto: "Envie seus documentos",
		},
		{
			numero: "3",
			texto: "Comece o curso",
		},
	],

	depoimento: {
		texto: "Ótimo curso! Aprendi tudo sobre segurança das crianças. Agora trabalho com transporte escolar.",
		autor: "Ana P.",
		profissao: "Motorista Escolar",
		estrelas: 5,
	},
	whatsappLink:
		"https://wa.me/5517997437646?text=Olá!%20Quero%20fazer%20o%20curso%20de%20Transporte%20Escolar",
	ctaTexto: "Quero Garantir Minha Vaga",
	ctaSecundarioTexto: "Falar no WhatsApp Agora",
	documentos: "CNH categoria C, D ou E, Email e um telefone para contato.",
	validade: "Certificado válido em todo o Brasil",
	secaoComoFuncionaTexto: "Como Funciona",
	naoPercaTempo: "Não Perca Tempo!",
	vagasLimitadas: "Vagas limitadas toda semana",
};

const meuSchema = pageSchemas.transporteEscolar({
	name: "Curso de Transporte Escolar",
	description:
		"Curso de Transporte Escolar com certificado válido em todo Brasil. Turmas toda semana.",
	image: "https://autoescoladanda.com.br/cursos/escolar.webp",
});

const schemaComRating = addRatingToSchema(meuSchema, 4.9, 28);
---

<Layout
	title="Curso Transporte Escolar - Autoescola Danda"
	description="Curso de Transporte Escolar. Turmas toda semana. Certificado válido em todo Brasil. Fale no WhatsApp agora."
>
	<script
		type="application/ld+json"
		set:html={JSON.stringify(schemaComRating)}
	/>
	<CoursePage {...props} client:load />
</Layout>
