---
const informacoes = [
    {
        icone: "location_on",
        titulo: "Endereço",
        texto: "Rua Mariana Alves de Lima, 855 - Centro, Aparecida do Taboado - MS",
    },
    {
        icone: "phone",
        titulo: "Telefone",
        texto: "(67) 98136-8080",
    },
    {
        icone: "mail",
        titulo: "E-mail",
        texto: "autoescoladanda@gmail.com",
    },
    {
        icone: "schedule",
        titulo: "Horário de Funcionamento",
        texto: "Seg - Sex: 8h às 18h",
    },
];
---

<section id="contato" class="w-full flex flex-col pt-12 sm:pt-16 md:pt-20">
    <div class="corpo mx-auto">
        <div class="text-center mb-10 sm:mb-12 md:mb-16 px-4">
            <p class="text-primary font-semibold uppercase tracking-wider mb-2 text-xs sm:text-sm">
                Contato
            </p>
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-800">
                Fale conosco
            </h2>
            <p class="text-neutral-500 mt-3 sm:mt-4 max-w-2xl mx-auto text-sm sm:text-base">
                Entre em contato e tire todas as suas dúvidas. Estamos prontos
                para ajudar!
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-12 px-4">
            <div>
                <div class="grid grid-cols-1 gap-3 sm:gap-4 mb-6 sm:mb-8 p-4 sm:p-6 lg:p-8 w-full">
                    {
                        informacoes.map((info) => (
                            <div class="flex gap-3 sm:gap-4 p-4 sm:p-5 rounded-xl bg-neutral-50 w-full">
                                <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
                                    <span class="material-symbols-outlined text-primary text-xl sm:text-2xl">
                                        {info.icone}
                                    </span>
                                </div>
                                <div>
                                    <h3 class="font-bold text-neutral-800 mb-1 text-sm sm:text-base">
                                        {info.titulo}
                                    </h3>
                                    <p class="text-xs sm:text-sm text-neutral-500">
                                        {info.texto}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                    <a
                        href="https://wa.me/5567981368080"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex-1 bg-green-500 text-white rounded-xl py-4 px-6 flex items-center justify-center gap-2 font-medium hover:bg-green-600 active:bg-green-700 transition-all min-h-[48px] text-sm sm:text-base"
                    >
                        <img
                            src="/icone-whatsapp.png"
                            alt="WhatsApp"
                            height="24"
                            width="24"
                            loading="lazy"
                        />
                        WhatsApp
                    </a>
                    <a
                        href="https://instagram.com/autoescoladanda"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-xl py-4 px-6 flex items-center justify-center gap-2 font-medium hover:opacity-90 active:opacity-80 transition-all min-h-[48px] text-sm sm:text-base"
                    >
                        <img
                            src="/icone-instagram.png"
                            alt="Instagram"
                            height="24"
                            width="24"
                            loading="lazy"
                        />

                        Instagram
                    </a>
                </div>
            </div>

            <div class="bg-neutral-50 rounded-2xl p-6 sm:p-8">
                <h3 class="text-xl sm:text-2xl font-bold text-neutral-800 mb-4 sm:mb-6">
                    Envie uma mensagem
                </h3>
                <form id="formContato" class="flex flex-col gap-4">
                    <div>
                        <label
                            class="block text-xs sm:text-sm font-medium text-neutral-700 mb-2"
                            >Nome completo</label
                        >
                        <input
                            type="text"
                            id="txtNomeContato"
                            name="nome"
                            required
                            minlength="3"
                            placeholder="Digite seu nome"
                            class="w-full px-4 py-3 sm:py-3.5 rounded-xl border border-neutral-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all text-sm sm:text-base"
                        />
                        <span id="erroNome" class="text-red-500 text-xs sm:text-sm mt-1 hidden">Por favor, digite seu nome completo (mínimo 3 caracteres)</span>
                    </div>
                    <div>
                        <label
                            class="block text-xs sm:text-sm font-medium text-neutral-700 mb-2"
                            >Mensagem</label
                        >
                        <textarea
                            rows="4"
                            name="mensagem"
                            required
                            minlength="10"
                            placeholder="Olá, gostaria de mais informações sobre a Autoescola Danda."
                            id="txtMensagemContato"
                            class="w-full px-4 py-3 sm:py-3.5 rounded-xl border border-neutral-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all resize-none text-sm sm:text-base"
                        ></textarea>
                        <span id="erroMensagem" class="text-red-500 text-xs sm:text-sm mt-1 hidden">Por favor, digite uma mensagem (mínimo 10 caracteres)</span>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-primary text-white py-4 cursor-pointer rounded-xl font-medium hover:bg-primary/90 active:bg-primary/80 transition-all flex items-center justify-center gap-2 min-h-[48px] text-sm sm:text-base"
                    >
                        <span class="material-symbols-outlined">send</span>
                        Enviar mensagem
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div
        class="w-full bg-neutral-900 mt-12 sm:mt-16 md:mt-20 p-6 sm:p-8 md:p-10 grid grid-cols-1 gap-4 text-white text-center"
    >
        <div
            class="flex flex-col justify-center items-center"
        >
            <h1 class="text-2xl sm:text-3xl font-semibold mb-2 px-4">Nossa localização</h1>
            <p class="text-sm sm:text-base px-4 mb-6">Venha encontrar a gente! estamos ansiosos pela sua presença!</p>
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3747.2602397834135!2d-51.097247499999995!3d-20.081405399999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9499919bd3ee881b%3A0x2b5ef7a90286f861!2sAutoescola%20Danda%20-%20Aparecida%20do%20Taboado%20-%20MS!5e0!3m2!1spt-BR!2sbr!4v1769521598812!5m2!1spt-BR!2sbr"
                class="rounded-2xl w-full h-[250px] sm:h-[300px] md:h-[400px]"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <a class="bg-red-700 p-4 w-full flex gap-2 sm:gap-4 items-center justify-center hover:bg-red-800 active:bg-red-900 transition-all rounded-lg mt-3 sm:mt-6 cursor-pointer min-h-[48px] text-sm sm:text-base" href="https://maps.app.goo.gl/iB6UgjMzsyryFpEH7" target="_blank" rel="noopener noreferrer">
            Abrir no Google Maps
            <span class="material-symbols-outlined"> map_pin_heart </span>
        </a>
    </div>
</section>

<script>
    const form = document.getElementById("formContato") as HTMLFormElement;
    const inputNome = document.getElementById("txtNomeContato") as HTMLInputElement;
    const inputMensagem = document.getElementById("txtMensagemContato") as HTMLTextAreaElement;
    const erroNome = document.getElementById("erroNome");
    const erroMensagem = document.getElementById("erroMensagem");

    // Validação em tempo real
    inputNome?.addEventListener("input", () => {
        if (inputNome.value.length >= 3) {
            erroNome?.classList.add("hidden");
            inputNome.classList.remove("border-red-500");
        }
    });

    inputMensagem?.addEventListener("input", () => {
        if (inputMensagem.value.length >= 10) {
            erroMensagem?.classList.add("hidden");
            inputMensagem.classList.remove("border-red-500");
        }
    });

    form?.addEventListener("submit", (event) => {
        event.preventDefault();

        let formValido = true;

        // Validar nome
        if (!inputNome.value || inputNome.value.trim().length < 3) {
            erroNome?.classList.remove("hidden");
            inputNome.classList.add("border-red-500");
            formValido = false;
        } else {
            erroNome?.classList.add("hidden");
            inputNome.classList.remove("border-red-500");
        }

        // Validar mensagem
        if (!inputMensagem.value || inputMensagem.value.trim().length < 10) {
            erroMensagem?.classList.remove("hidden");
            inputMensagem.classList.add("border-red-500");
            formValido = false;
        } else {
            erroMensagem?.classList.add("hidden");
            inputMensagem.classList.remove("border-red-500");
        }

        // Se o formulário for válido, enviar para WhatsApp
        if (formValido) {
            const mensagem = inputMensagem.value.trim();
            const nome = inputNome.value.trim();

            const url = `https://api.whatsapp.com/send?phone=5567981368080&text=${encodeURIComponent("Olá, meu nome é " + nome + ". " + mensagem)}`;
            window.open(url, "_blank");

            // Limpar formulário após envio
            form.reset();
        }
    });
</script>
