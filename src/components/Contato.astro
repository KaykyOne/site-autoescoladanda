---
const informacoes = [
    {
        icone: "location_on",
        titulo: "Endereço",
        texto: "Rua Mariana Alves de Lima, 855 - Centro, Aparecida do Taboado - MS",
    },
    {
        icone: "phone",
        titulo: "Telefone",
        texto: "(67) 98136-8080",
    },
    {
        icone: "mail",
        titulo: "E-mail",
        texto: "autoescoladanda@gmail.com",
    },
    {
        icone: "schedule",
        titulo: "Horário de Funcionamento",
        texto: "Seg - Sex: 8h às 18h | Sáb: 8h às 12h",
    },
];
---

<section id="contato" class="w-full py-20">
    <div class="corpo mx-auto">
        <div class="text-center mb-16">
            <p class="text-primary font-semibold uppercase tracking-wider mb-2">
                Contato
            </p>
            <h2 class="text-4xl md:text-5xl font-bold text-neutral-800">
                Fale conosco
            </h2>
            <p class="text-neutral-500 mt-4 max-w-2xl mx-auto">
                Entre em contato e tire todas as suas dúvidas. Estamos prontos
                para ajudar!
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
                <div class="grid grid-cols-1 gap-2 mb-8 p-8 w-full">
                    {
                        informacoes.map((info) => (
                            <div class="flex gap-4 p-5 rounded-xl bg-neutral-50 w-full">
                                <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0">
                                    <span class="material-symbols-outlined text-primary text-2xl">
                                        {info.icone}
                                    </span>
                                </div>
                                <div>
                                    <h3 class="font-bold text-neutral-800 mb-1">
                                        {info.titulo}
                                    </h3>
                                    <p class="text-sm text-neutral-500">
                                        {info.texto}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div class="flex gap-4">
                    <a
                        href="https://wa.me/5567981368080"
                        target="_blank"
                        class="flex-1 bg-green-500 text-white rounded-xl py-4 px-6 flex items-center justify-center gap-2 font-medium hover:bg-green-600 transition-all"
                    >
                        <img
                            src="/icone-whatsapp.png"
                            alt="WhatsApp"
                            height="30"
                            width="30"
                        />
                        WhatsApp
                    </a>
                    <a
                        href="https://instagram.com/autoescoladanda"
                        target="_blank"
                        class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-xl py-4 px-6 flex items-center justify-center gap-2 font-medium hover:opacity-90 transition-all"
                    >
                        <img
                            src="/icone-instagram.png"
                            alt="Instagram"
                            height="30"
                            width="30"
                        />

                        Instagram
                    </a>
                </div>
            </div>

            <div class="bg-neutral-50 rounded-2xl p-8">
                <h3 class="text-2xl font-bold text-neutral-800 mb-6">
                    Envie uma mensagem
                </h3>
                <form id="formContato" class="flex flex-col gap-4">
                    <div>
                        <label
                            class="block text-sm font-medium text-neutral-700 mb-2"
                            >Nome completo</label
                        >
                        <input
                            type="text"
                            id="txtNomeContato"
                            placeholder="Digite seu nome"
                            class="w-full px-4 py-3 rounded-xl border border-neutral-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
                        />
                    </div>
                    <div>
                        <label
                            class="block text-sm font-medium text-neutral-700 mb-2"
                            >Mensagem</label
                        >
                        <textarea
                            rows="4"
                            placeholder="Olá, gostaria de mais informações sobre a Autoescola Danda."
                            id="txtMensagemContato"
                            class="w-full px-4 py-3 rounded-xl border border-neutral-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all resize-none"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full bg-primary text-white py-4 cursor-pointer rounded-xl font-medium hover:bg-primary/90 transition-all flex items-center justify-center gap-2"
                    >
                        <span class="material-symbols-outlined">send</span>
                        Enviar mensagem
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    const form = document.getElementById("formContato");

    form?.addEventListener("submit", (event) => {
        event.preventDefault();

        const inputNome = document.getElementById(
            "txtNomeContato",
        ) as HTMLInputElement;
        const inputMensagem = document.getElementById(
            "txtMensagemContato",
        ) as HTMLTextAreaElement;

        const mensagem =
            inputMensagem.value ||
            "Olá, gostaria de mais informações sobre a Autoescola Danda.";
        const nome = inputNome.value || "Interessado";

        const url = `https://api.whatsapp.com/send?phone=5567981368080&text=${encodeURIComponent("Olá, meu nome é " + nome + ". " + mensagem)}`;
        window.open(url, "_blank");
    });
</script>
