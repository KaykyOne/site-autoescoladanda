---
const links = [
    { titulo: "Início", href: "/#" },
    { titulo: "Serviços", href: "/#servicos" },
    { titulo: "Vantagens", href: "/#vantagens" },
    { titulo: "Sobre", href: "/#sobre" },
    { titulo: "Planos", href: "/planos" },
    // { titulo: "Depoimentos", href: "#depoimentos" },
];
---

<div class="fixed top-0 w-screen justify-center items-center flex z-9998">
    <header
        class="w-[95vw] bg-primary/70 text-white backdrop-blur-2xl z-50 m-2 rounded-xl shadow-lg border border-primary"
    >
        <div class="corpo mx-auto h-20 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <img
                    class="h-10 w-10"
                    src="/favicon.png"
                    alt="Autoescola Danda - Aparecida do Taboado MS - Logo"
                />
                <a
                    class="text-xl font-light"
                    href="/"
                    title="Autoescola Danda - Aparecida do Taboado MS"
                >
                    Autoescola <strong class="font-bold">Danda</strong>
                </a>
            </div>

            <!-- Menu Desktop -->
            <nav class="hidden xl:flex items-center gap-8">
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            class=" hover:text-amber-400 transition-all font-medium"
                        >
                            {link.titulo}
                        </a>
                    ))
                }
            </nav>

            <div class="flex items-center gap-4">
                <a
                    href="/#contato"
                    class="hidden md:flex bg-amber-500 text-white px-6 py-3 rounded-full font-medium hover:bg-amber-600 transition-all items-center gap-2"
                >
                    <span class="material-symbols-outlined text-lg">phone</span>
                    Contato
                </a>

                <!-- Menu Mobile Button -->
                <button
                    id="menu-toggle"
                    class="xl:hidden cursor-pointer flex items-center justify-center w-10 h-10 rounded-lg hover:bg-neutral-100 transition-all"
                >
                    <span class="material-symbols-outlined text-2xl">menu</span>
                </button>
            </div>
        </div>

        <!-- Menu Mobile -->
        <nav
            id="menu-mobile"
            class="xl:hidden hidden flex-col bg-primary/60 backdrop-blur-2xl border-t border-neutral-100 pb-4 rounded-b-xl shadow-lg"
        >
            {
                links.map((link) => (
                    <a
                        href={link.href}
                        class="px-7 py-3 hover:text-amber-400 hover:bg-neutral-50 transition-all font-medium"
                    >
                        {link.titulo}
                    </a>
                ))
            }
            <a
                href="#contato"
                class="mx-7 mt-3 bg-amber-500 text-white px-6 py-3 rounded-full font-medium hover:bg-amber-600 transition-all text-center"
            >
                Contato
            </a>
        </nav>
    </header>
</div>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const menuMobile = document.getElementById("menu-mobile");

    menuToggle?.addEventListener("click", () => {
        menuMobile?.classList.toggle("hidden");
        menuMobile?.classList.toggle("flex");
    });

    // Fecha o menu ao clicar em um link
    menuMobile?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
            menuMobile.classList.add("hidden");
            menuMobile.classList.remove("flex");
        });
    });
</script>
