---
const vantagens = [
    {
        icone: "payments",
        titulo: "Preço Acessível",
        descricao: "Planos que cabem no seu bolso com condições especiais de pagamento."
    },
    {
        icone: "schedule",
        titulo: "Horários Flexíveis",
        descricao: "Agende suas aulas nos horários que melhor se encaixam na sua rotina."
    },
    {
        icone: "workspace_premium",
        titulo: "Instrutores Qualificados",
        descricao: "Profissionais experientes e pacientes para ensinar você da melhor forma."
    },
    {
        icone: "directions_car_filled",
        titulo: "Frota Moderna",
        descricao: "Veículos novos e bem conservados para seu aprendizado."
    },
    {
        icone: "verified",
        titulo: "Alta Taxa de Aprovação",
        descricao: "Metodologia comprovada com mais de 95% de aprovação."
    },
    {
        icone: "support_agent",
        titulo: "Suporte Completo",
        descricao: "Acompanhamento em todo o processo, do início até a CNH."
    }
];
---

<section id="vantagens" class="w-full py-12 sm:py-16 md:py-20 bg-linear-90 from-primary to-blue-900 text-white">
    <div class="corpo mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 sm:gap-12 lg:gap-16 items-center">
            <div class="px-4">
                <p class="text-white font-semibold uppercase tracking-wider mb-2 text-xs sm:text-sm">Por que nos escolher?</p>
                <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-secondary text-shadow-xs text-shadow-amber-400 mb-4 sm:mb-6">
                    Vantagens de aprender na Autoescola Danda
                </h2>
                <p class="text-neutral-200/80 text-sm sm:text-base md:text-lg leading-relaxed mb-6 sm:mb-8">
                    Na Autoescola Danda, você encontra tudo o que precisa para tirar sua CNH
                    com tranquilidade. Nossa missão é tornar o processo de habilitação simples
                    e acessível para todos.
                </p>

                <div class="flex flex-wrap gap-6 sm:gap-8">
                    <div class="text-center">
                        <p class="text-xl sm:text-2xl font-bold text-neutral-300">+20</p>
                        <p class="text-neutral-300/80 text-xs sm:text-sm">Anos de experiência</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl sm:text-2xl font-bold text-neutral-300">100%</p>
                        <p class="text-neutral-300/80 text-xs sm:text-sm">Foco em aprovação</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl sm:text-2xl font-bold text-neutral-300">+1k</p>
                        <p class="text-neutral-300/80 text-xs sm:text-sm">Alunos formados</p>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4 px-4">
                {vantagens.map((vantagem, index) => (
                    <div class="scroll-animate-scale flex md:flex-col gap-3 sm:gap-4 p-4 sm:p-5 rounded-lg bg-neutral-50 hover:bg-neutral-200 transition-colors duration-200" style={`transition-delay: ${index * 0.1}s`}>
                        <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-primary/10 flex items-center justify-center shrink-0">
                            <span class="material-symbols-outlined text-primary text-xl sm:text-2xl">{vantagem.icone}</span>
                        </div>
                        <div>
                            <h3 class="font-bold text-neutral-800 mb-1 text-sm sm:text-base">{vantagem.titulo}</h3>
                            <p class="text-xs sm:text-sm text-neutral-500">{vantagem.descricao}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
