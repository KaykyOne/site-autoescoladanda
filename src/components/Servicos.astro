---
const servicos = [
    {
        icone: "directions_car",
        titulo: "Categoria B - Carro",
        descricao: "Aprenda a dirigir carros em Aparecida do Taboado com instrutores experientes e veículos modernos.",
        cor: "primary"
    },
    {
        icone: "two_wheeler",
        titulo: "Categoria A - Moto",
        descricao: "Domine a pilotagem de motos com segurança e confiança nas ruas de Aparecida do Taboado e região.",
        cor: "secondary"
    },
    {
        icone: "school",
        titulo: "Aulas Teóricas",
        descricao: "Material didático atualizado e aulas dinâmicas em nossa sede no centro de Aparecida do Taboado.",
        cor: "primary"
    },
    // {
    //     icone: "autorenew",
    //     titulo: "Renovação de CNH",
    //     descricao: "Processo rápido e descomplicado para renovar sua habilitação.",
    //     cor: "secondary"
    // },
    {
        icone: "add_card",
        titulo: "Adição de Categoria",
        descricao: "Adicione novas categorias à sua CNH com facilidade.",
        cor: "primary"
    },
    {
        icone: "airport_shuttle",
        titulo: "Cursos Profissionalizantes",
        descricao: "Cursos para motoristas profissionais, como o MOPP.",
        cor: "secondary"
    }
];
---

<section id="servicos" class="w-full py-12 sm:py-16 md:py-20 bg-neutral-50">
    </div>
    <div class="corpo mx-auto">
        <div class="text-center mb-10 sm:mb-12 md:mb-16">
            <p class="text-primary font-semibold uppercase tracking-wider mb-2 text-xs sm:text-sm">Nossos Serviços</p>
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-neutral-800 px-4">
                Serviços de Autoescola em Aparecida do Taboado
            </h2>
            <p class="text-neutral-500 mt-3 sm:mt-4 max-w-2xl mx-auto text-sm sm:text-base px-4">
                Conheça todos os serviços disponíveis na Autoescola Danda para você conquistar sua habilitação em Aparecida do Taboado - MS.
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            {servicos.map((servico, index) => (
                <div class="scroll-animate bg-white rounded-lg sm:rounded-lg p-6 sm:p-8 shadow-lg hover:shadow-xl transition-shadow duration-200 border border-neutral-100" style={`transition-delay: ${index * 0.1}s`}>
                    <div class={`w-14 h-14 sm:w-16 sm:h-16 rounded-lg sm:rounded-lg flex items-center justify-center mb-4 sm:mb-6 ${servico.cor === 'primary' ? 'bg-primary/10 text-primary' : 'bg-secondary/10 text-secondary'}`}>
                        <span class="material-symbols-outlined text-2xl sm:text-3xl">{servico.icone}</span>
                    </div>
                    <h3 class="text-lg sm:text-xl font-bold text-neutral-800 mb-2 sm:mb-3">{servico.titulo}</h3>
                    <p class="text-neutral-500 leading-relaxed text-sm sm:text-base">{servico.descricao}</p>
                </div>
            ))}
        </div>
    </div>
</section>
