---
const links = [
    { titulo: "Início", href: "#" },
    { titulo: "Serviços", href: "#servicos" },
    { titulo: "Sobre", href: "#sobre" },
    { titulo: "Depoimentos", href: "#depoimentos" },
    { titulo: "Cursos", href: "/cursos" },
    { titulo: "Contato", href: "#contato" },
];

const servicos = [
    { nome: "Categoria A (Moto)", icone: "two_wheeler" },
    { nome: "Categoria B (Carro)", icone: "directions_car" },
    { nome: "Categoria A+B", icone: "local_shipping" },
    { nome: "Reciclagem", icone: "autorenew" },
    { nome: "Cursos Especializantes", icone: "school", link: "/cursos" },
];
---

<footer class="w-full bg-neutral-900 text-white pt-16 pb-8 h-full">
    <div class="corpo mx-auto">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12"
        >
            <!-- Logo e descrição -->
            <div>
                <div class="flex items-center gap-3 mb-4">
                    <img
                        src="/favicon.png"
                        alt="Logo Danda"
                        class="w-10 h-10"
                        loading="lazy"
                    />
                    <span class="text-2xl font-bold"
                        >Autoescola <span class="text-primary">Danda</span
                        ></span
                    >
                </div>
                <p class="text-neutral-400 leading-relaxed mb-6">
                    Sua jornada para a CNH começa aqui. Qualidade, confiança e
                    preço justo.
                </p>
                <div class="flex gap-3">
                    <a
                        href="https://www.instagram.com/autoescoladanda/"
                        target="_blank"
                        class="w-10 h-10 bg-neutral-800 rounded-full flex items-center justify-center hover:bg-primary transition-all"
                    >
                        <img
                            src="/icone-instagram.png"
                            alt="Instagram"
                            height="20"
                            width="20"
                            loading="lazy"
                        />
                    </a>
                    <a
                        href="https://wa.me/5567981368080"
                        target="_blank"
                        class="w-10 h-10 bg-neutral-800 rounded-full flex items-center justify-center hover:bg-green-500 transition-all"
                    >
                        <img
                            src="/icone-whatsapp.png"
                            alt="WhatsApp"
                            height="20"
                            width="20"
                            loading="lazy"
                        />
                    </a>
                </div>
            </div>

            <!-- Links rápidos -->
            <div>
                <h4 class="text-lg font-bold mb-4">Links Rápidos</h4>
                <ul class="flex flex-col gap-3">
                    {
                        links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-neutral-400 hover:text-primary transition-all flex items-center gap-2"
                                >
                                    <span class="material-symbols-outlined text-sm">chevron_right</span>
                                    {link.titulo}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Serviços -->
            <div>
                <h4 class="text-lg font-bold mb-4">Serviços</h4>
                <ul class="flex flex-col gap-3">
                    {
                        servicos.map((servico) => (
                            <li class="flex items-center gap-2">
                                {servico.link ? (
                                    <a href={servico.link} class="flex items-center gap-2 hover:text-primary transition-colors">
                                        <span class="material-symbols-outlined text-secondary text-lg">
                                            {servico.icone}
                                        </span>
                                        <span class="text-neutral-400 hover:text-primary transition-colors">{servico.nome}</span>
                                    </a>
                                ) : (
                                    <>
                                        <span class="material-symbols-outlined text-secondary text-lg">
                                            {servico.icone}
                                        </span>
                                        <span class="text-neutral-400">{servico.nome}</span>
                                    </>
                                )}
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contato -->
            <div>
                <h4 class="text-lg font-bold mb-4">Contato</h4>
                <ul class="flex flex-col gap-4">
                    <li class="flex items-start gap-3">
                        <span class="material-symbols-outlined text-primary"
                            >location_on</span
                        >
                        <span class="text-neutral-400"
                            >Rua Mariana Alves de Lima, 855 - Centro, Aparecida
                            do Taboado - MS</span
                        >
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-primary"
                            >phone</span
                        >
                        <span class="text-neutral-400">(67) 98136-8080</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <span class="material-symbols-outlined text-primary"
                            >mail</span
                        >
                        <span class="text-neutral-400"
                            >autoescoladanda@gmail.com</span
                        >
                    </li>
                </ul>
            </div>
        </div>

        <!-- Linha divisória -->
        <div class="border-t border-neutral-800 pt-8">
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-4"
            >
                <p class="text-neutral-500 text-sm">
                    © 2024 Autoescola Danda. Todos os direitos reservados.
                </p>
                <p class="text-neutral-500 text-sm">
                    Desenvolvido com <span class="text-red-500">❤</span> para você
                </p>
            </div>
        </div>
    </div>
</footer>
